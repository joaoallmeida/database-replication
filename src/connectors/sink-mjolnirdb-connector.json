{
  "name": "postgre-sink-mjolnirdb-connector",
  "config": {
    "tasks.max": 3,
    "batch.size": 1000,
    "autoReconnect": true,
    "connector.class": "io.debezium.connector.jdbc.JdbcSinkConnector",
    "connection.url": "jdbc:postgresql://mjolnirdb:5432/sinarm",
    "connection.username": "root",
    "connection.password": "mjolnirdb2024",
    "primary.key.mode": "record_value",
    "primary.key.fields": "id",
    "insert.mode": "upsert",
    "schema.evolution": "basic",
    "database.time_zone": "UTC-3",
    "quote.identifiers": true,
    "auto.create": true,
    "auto.evolve": true,
    "errors.log.enable": true,
    "errors.log.include.messages": true,
    "topics.regex": "sourcedb.*",
    "transforms":"unwrap,RemoveString",
    "transforms.unwrap.type":"io.debezium.transforms.ExtractNewRecordState",
    "transforms.unwrap.add.fields.prefix": "",
    "transforms.unwrap.add.fields": "source.ts_ms:replicated_at",
    "transforms.unwrap.drop.tombstones": false,
    "transforms.RemoveString.type": "org.apache.kafka.connect.transforms.RegexRouter",
    "transforms.RemoveString.regex": "sourcedb.(.*)",
    "transforms.RemoveString.replacement": "$1",
    "key.converter":"io.confluent.connect.avro.AvroConverter",
    "key.converter.schemas.enable": true,
    "key.converter.schema.registry.url": "http://schema-registry:6060",
    "value.converter":"io.confluent.connect.avro.AvroConverter",
    "value.converter.schema.registry.url": "http://schema-registry:6060",
    "value.converter.schemas.enable": true
  }
}

